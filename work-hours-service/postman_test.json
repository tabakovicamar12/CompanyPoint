        },
        "url": "{{baseUrl}}/workHours/admin/logForEmployee"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 201', function () {",
              "  pm.response.to.have.status(201);",
              "});",
              "",
              "var json = pm.response.json();",
              "pm.test('Has id field', function () {",
              "  pm.expect(json).to.have.property('id');",
              "});",
              "",
              "pm.environment.set('adminWorkHourId', json.id);",
              "pm.environment.set('adminEmployeeId', json.employee_id);"
            ]
          }
        }
      ]
    },
    {
      "name": "7. Admin – Get all work hours (GET /workHours/all)",
