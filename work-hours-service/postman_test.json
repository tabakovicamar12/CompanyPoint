          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"hours\": 6.5,\n  \"description\": \"Updated by admin\"\n}"
        },
        "url": "{{baseUrl}}/workHours/admin/update/{{adminWorkHourId}}"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status code is 200', function () {",
              "  pm.response.to.have.status(200);",
              "});",
              "",
